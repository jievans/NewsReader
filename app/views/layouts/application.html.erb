<!DOCTYPE html>
<html>
<head>
  <title>NewReader</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header><h1>NEWSREADER</h1></header>
  <% if flash %>
    <p><%= flash[:notice] %></p>
  <% end %>

  <% if current_user %>
    <%= button_to "Logout", session_url, :method => :delete %>
  <% end %>

  <%= yield %>

</body>
</html>
